<form>
    <div class="container">
        <h1>Test</h1>
        <div class="row">
            <yearmonthconverter years="term.years" months="term.months" slider-model="sliders.term.months">
                <input type="text" maxlength="2" data-max-value="10" ng-model="term.years" />years
                <input type="text" maxlength="2" data-max-value="11" ng-model="term.months" />months
                <input ng-model="sliders.term.months" value="{{sliders.term.months}}" />
                <br />
                <slider ng-model="$parent.sliders.term.months" value="24" tooltip="hide" min="1" step="1" max="120" value="1"></slider>
            </yearmonthconverter>
        </div>
    </div>

</form>